<syncfusion:ChromelessWindow
        x:Class="WTF_DICOM.MainWindow"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WTF_DICOM"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel, IsDesignTimeCreatable=False}"
        SizeChanged="Window_SizeChanged"
        Title="WTF DICOM" Height="540" Width="1020">
  <Grid Width="800" x:Name="MainWindowLayoutGrid">
    <Grid.RowDefinitions>
      <!--Menu-->
      <RowDefinition Height="30" />
      <!--Toolbar-->
      <RowDefinition Height="20" />
      <!--Content-->
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--Menu-->
    <Menu Margin="0,0,0,0" MinWidth="200" Grid.Row="0" Grid.Column="0" 
          HorizontalAlignment="Left" VerticalAlignment="Top" IsMainMenu="True">
      <MenuItem Header="_File" MinWidth="100">
        <MenuItem Header="Select Directory" Command="{Binding SelectDirectoryCommand}" />
        <MenuItem Header="Select File" Command="{Binding SelectFileCommand}" />
        <MenuItem Header="Show All Selected In Folder" Command="{Binding ShowAllSelectedInFolderCommand}" />
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Options" MinWidth="100">
        <MenuItem Header="Save Template" Command="{Binding SaveDisplayAsTemplateCommand}" />
        <MenuItem Header="Load Template" Command="{Binding LoadDisplayFromTemplateCommand}" />
      </MenuItem>
      <Separator/>
      <MenuItem Header="E_xit" Command="{x:Static ApplicationCommands.Close}"/>

      <!--<Menu.Style>
        <Style TargetType="{x:Type MenuItem}"
               BasedOn="{StaticResource {x:Type MenuItem}}">
          <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
      </Menu.Style>-->
    </Menu>

    <!--Toolbar-->
    <!--TODO-->

    <!--Content-->


    <!-- try using a  scrollviewer around the datagrid??? -->
    <syncfusion:DockingManager
      Grid.Column="0" Grid.Row="2"
      x:Name="MainWindowContentDockingManager"
      ContainerMode="TDI"
      UseNativeFloatWindow="False"
      EnableMouseHoverBackground="False"
      EnableScrollableSidePanel="True"
      IsEnableHotTracking="False"
      IsVS2010DraggingEnabled="True"
      PersistState="False"
      UseDocumentContainer="True">

      <ContentControl
          syncfusion:DockingManager.DesiredHeightInFloatingMode="200"
          syncfusion:DockingManager.DesiredWidthInDockedMode="800"
          syncfusion:DockingManager.DesiredWidthInFloatingMode="150"
          syncfusion:DockingManager.Header="Dicom Files"
          syncfusion:DockingManager.SideInDockedMode="Left"
          syncfusion:DockingManager.State="Dock"
          syncfusion:DocumentContainer.MDIBounds="30,30,500,300"
          BorderThickness="0">

        <DataGrid
                ItemsSource="{Binding DicomFiles}"
                x:Name="DicomFileCommonDataGrid"
                AutoGenerateColumns="False"
                VerticalScrollBarVisibility="Visible"
                HorizontalScrollBarVisibility="Visible"
                IsReadOnly="True"
                CanUserDeleteRows="False"
                CanUserAddRows="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="True"
                CanUserSortColumns="False"
                SelectionMode="Single" SelectionUnit="CellOrRowHeader"
                AlternationCount="2" AlternatingRowBackground="LightPink">

          <DataGrid.CellStyle>
            <Style TargetType="{x:Type DataGridCell}"
               BasedOn="{StaticResource {x:Type DataGridCell}}">
              <EventSetter Event="GotFocus" Handler="CellClick"/>
              <EventSetter Event="ContextMenu.ContextMenuOpening" Handler="DataGridContextMenuOpeningHandler"/>
              <!--<Setter Property="BorderBrush" Value="DarkViolet"/>
          <Setter Property="BorderThickness" Value="1"/>-->
              <Setter Property="Margin" Value="10,0,0,0"/>
              <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
          </DataGrid.CellStyle>

          <DataGrid.ColumnHeaderStyle>
            <Style TargetType="{x:Type DataGridColumnHeader}"
               BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
              <EventSetter Event="GotFocus" Handler="HeaderClick"/>
              <EventSetter Event="ContextMenu.ContextMenuOpening" Handler="DataGridHeaderContextMenuOpeningHandler"/>
              <Setter Property="Margin" Value="0,1,0,0"/>
              <Setter Property="BorderThickness" Value="1"/>
            </Style>
          </DataGrid.ColumnHeaderStyle>


        </DataGrid>

      </ContentControl>
    </syncfusion:DockingManager>
  </Grid>
  <!--end layout Grid-->

</syncfusion:ChromelessWindow>
