<syncfusion:ChromelessWindow
        x:Class="WTF_DICOM.MainWindow"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WTF_DICOM"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel, IsDesignTimeCreatable=False}"
        SizeChanged="Window_SizeChanged"
        Title="WTF DICOM" Height="540" Width="1220">
  <Grid Width="1210" x:Name="MainWindowLayoutGrid"
        Margin="0,0,0,0">
    <Grid.RowDefinitions>
      <!--Menu-->
      <RowDefinition Height="30" />
      <!--Toolbar-->
      <RowDefinition Height="20" />
      <!--Content-->
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="4" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="6" />
    </Grid.ColumnDefinitions>

    <!--Menu-->
    <Menu Margin="0,0,0,0" MinWidth="200" Grid.Row="0" Grid.Column="1" 
          HorizontalAlignment="Left" VerticalAlignment="Top" IsMainMenu="True">
      <MenuItem Header="_File" MinWidth="100">
        <MenuItem Header="Select Directory" Command="{Binding SelectDirectoryCommand}" />
        <MenuItem Header="Select File" Command="{Binding SelectFileCommand}" />
        <MenuItem Header="Show All Selected In Folder" Command="{Binding ShowAllSelectedInFolderCommand}" />
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Options" MinWidth="100">
        <MenuItem Header="Save Template" Command="{Binding SaveDisplayAsTemplateCommand}" />
        <MenuItem Header="Load Template" Command="{Binding LoadDisplayFromTemplateCommand}" />
      </MenuItem>
      <Separator/>
      <MenuItem Header="E_xit" Command="{x:Static ApplicationCommands.Close}"/>

      <!--<Menu.Style>
        <Style TargetType="{x:Type MenuItem}"
               BasedOn="{StaticResource {x:Type MenuItem}}">
          <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
      </Menu.Style>-->
    </Menu>

    <!--Toolbar-->
    <!--TODO-->

    <!--Content-->


    <!-- Outermost Docking Manager -->
    <syncfusion:DockingManager
      Grid.Column="1" Grid.Row="2"
      x:Name="MainWindowContentDockingManager"
      ContainerMode="TDI"
      MaximizeButtonEnabled="True"
      UseNativeFloatWindow="False"
      EnableMouseHoverBackground="False"
      EnableScrollableSidePanel="True"
      IsEnableHotTracking="False"
      IsVS2010DraggingEnabled="True"
      PersistState="False"
      UseDocumentContainer="True">

      <!-- MAIN DISPLAY -->
      <ContentControl
          x:Name="DicomFilesContentControl"
          syncfusion:DockingManager.Header="Dicom Files"
          syncfusion:DockingManager.DesiredHeightInDockedMode="200"
          syncfusion:DockingManager.DesiredHeightInFloatingMode="200"
          syncfusion:DockingManager.DesiredWidthInDockedMode="800"
          syncfusion:DockingManager.DesiredWidthInFloatingMode="150"
          syncfusion:DockingManager.State="Dock"
          syncfusion:DockingManager.SideInDockedMode="Bottom"
          syncfusion:DocumentContainer.MDIBounds="2,2,1200,200"
          BorderThickness="0">

        <syncfusion:SfDataGrid
                ItemsSource="{Binding DicomFiles}"
                x:Name="DicomFileCommonDataGrid"               
                CurrentCellActivated="DicomFileCommonDataGrid_CurrentCellActivated"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                SelectionMode="Multiple"
                ColumnSizer="AutoWithLastColumnFill"
                AllowFiltering="True"
                AllowSorting="True"
                AllowDeleting="True"
                AllowDraggingColumns="False"
                AllowGrouping="True"
                ShowGroupDropArea="True"
                AllowResizingColumns="True"
                AlternationCount="2">
        </syncfusion:SfDataGrid>
      </ContentControl>

      <!-- TABBED DISPLAY -->
      <ContentControl
        x:Name="TabbedSequencesContentControl"
        Padding="0,0,10,0"
        syncfusion:DockingManager.DesiredHeightInFloatingMode="200"
        syncfusion:DockingManager.DesiredWidthInDockedMode="390"
        syncfusion:DockingManager.DesiredWidthInFloatingMode="150"
        syncfusion:DockingManager.Header="Sequences"
        syncfusion:DockingManager.SideInDockedMode="Right"
        syncfusion:DockingManager.State="Document"
        syncfusion:DocumentContainer.MDIBounds="2,2,390,300"
        BorderThickness="2">

        <!-- Docking Manager for TagsAndValues windows -->
        <syncfusion:DockingManager
          x:Name="TabbedSequencesDockingManager"
          DockFill="True">
        </syncfusion:DockingManager>

      </ContentControl>

      <!-- RHS DISPLAY -->
      <ContentControl
        x:Name="TagsAndValuesContentControl"
        Padding="0,0,10,0"
        syncfusion:DockingManager.DesiredHeightInFloatingMode="200"
        syncfusion:DockingManager.DesiredWidthInDockedMode="390"
        syncfusion:DockingManager.DesiredWidthInFloatingMode="150"
        syncfusion:DockingManager.Header="File Specific Information"
        syncfusion:DockingManager.SideInDockedMode="Tabbed"
        syncfusion:DockingManager.State="Document"
        syncfusion:DocumentContainer.MDIBounds="2,2,390,300"
        BorderThickness="2">
        
        <!-- Docking Manager for TagsAndValues windows -->
        <syncfusion:DockingManager
          x:Name="TagsAndValuesDockingManager"
          DockFill="True">
        </syncfusion:DockingManager>

      </ContentControl>




    </syncfusion:DockingManager>
  </Grid>
  <!--end layout Grid-->

  <Window.Resources>
    <Style x:Key="forwardBackwardButtonsStackedHeaderCell"  TargetType="syncfusion:GridStackedHeaderCellControl">
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="syncfusion:GridStackedHeaderCellControl">
            <StackPanel Grid.Row="2" Orientation="Horizontal">
              <Button Command="{Binding FirstCommand}" Content="first" />
              <Button Command="{Binding Minus5Command}" Content="-5" />
              <Button Command="{Binding Minus1Command}" Content="-1" />
              <TextBlock Text="{Binding SequenceCounterString}" VerticalAlignment="Center" Margin="4,0,4,0">
              </TextBlock>
              <Button Command="{Binding Plus1Command}" Content="+1" />
              <Button Command="{Binding Plus5Command}" Content="+5" />
              <Button Command="{Binding LastCommand}" Content="last" />

              <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                  <Setter Property="Visibility" Value="Visible"/>
                  <Style.Triggers>
                    <DataTrigger Binding="{Binding IsSequence}" Value="False">
                      <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </StackPanel.Style>

            </StackPanel>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style TargetType="syncfusion:GridHeaderCellControl">
      <Setter Property="FontSize" Value="12"/>
    </Style>
    <DataTemplate x:Key="WTFHeaderTemplate">
      <Grid>
        <TextBlock Text="{Binding}" TextWrapping="Wrap" />
      </Grid>
    </DataTemplate>
  </Window.Resources>

</syncfusion:ChromelessWindow>
