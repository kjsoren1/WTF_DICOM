<syncfusion:ChromelessWindow
        x:Class="WTF_DICOM.MainWindow"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WTF_DICOM"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel, IsDesignTimeCreatable=False}"
        SizeChanged="Window_SizeChanged"
        Title="WTF DICOM" Height="540" Width="1220">
  <Grid Width="1220" x:Name="MainWindowLayoutGrid">
    <Grid.RowDefinitions>
      <!--Menu-->
      <RowDefinition Height="30" />
      <!--Toolbar-->
      <RowDefinition Height="20" />
      <!--Content-->
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--Menu-->
    <Menu Margin="0,0,0,0" MinWidth="200" Grid.Row="0" Grid.Column="0" 
          HorizontalAlignment="Left" VerticalAlignment="Top" IsMainMenu="True">
      <MenuItem Header="_File" MinWidth="100">
        <MenuItem Header="Select Directory" Command="{Binding SelectDirectoryCommand}" />
        <MenuItem Header="Select File" Command="{Binding SelectFileCommand}" />
        <MenuItem Header="Show All Selected In Folder" Command="{Binding ShowAllSelectedInFolderCommand}" />
      </MenuItem>
      <Separator/>
      <MenuItem Header="_Options" MinWidth="100">
        <MenuItem Header="Save Template" Command="{Binding SaveDisplayAsTemplateCommand}" />
        <MenuItem Header="Load Template" Command="{Binding LoadDisplayFromTemplateCommand}" />
      </MenuItem>
      <Separator/>
      <MenuItem Header="E_xit" Command="{x:Static ApplicationCommands.Close}"/>

      <!--<Menu.Style>
        <Style TargetType="{x:Type MenuItem}"
               BasedOn="{StaticResource {x:Type MenuItem}}">
          <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
      </Menu.Style>-->
    </Menu>

    <!--Toolbar-->
    <!--TODO-->

    <!--Content-->


    <!-- try using a  scrollviewer around the datagrid??? -->
    <syncfusion:DockingManager
      Grid.Column="0" Grid.Row="2"
      x:Name="MainWindowContentDockingManager"
      ContainerMode="TDI"
      MaximizeButtonEnabled="True"
      UseNativeFloatWindow="False"
      EnableMouseHoverBackground="False"
      EnableScrollableSidePanel="True"
      IsEnableHotTracking="False"
      IsVS2010DraggingEnabled="True"
      PersistState="False"
      UseDocumentContainer="True">

      <!-- MAIN DISPLAY -->
      <ContentControl
          x:Name="DicomFilesContentControl"
          syncfusion:DockingManager.Header="Dicom Files"
          syncfusion:DockingManager.DesiredHeightInFloatingMode="200"
          syncfusion:DockingManager.DesiredWidthInDockedMode="800"
          syncfusion:DockingManager.DesiredWidthInFloatingMode="150"
          syncfusion:DockingManager.SideInDockedMode="Left"
          syncfusion:DockingManager.State="Dock"
          syncfusion:DockingManager.SideRelativetoContainer="Left"
          syncfusion:DocumentContainer.MDIBounds="20,20,800,300"
          BorderThickness="0">

        <syncfusion:SfDataGrid
                ItemsSource="{Binding DicomFiles}"
                x:Name="DicomFileCommonDataGrid"               
                CurrentCellActivated="DicomFileCommonDataGrid_CurrentCellActivated"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                SelectionMode="Single"
                AllowFiltering="True"
                AllowSorting="True"
                AllowDeleting="True"
                AllowDraggingColumns="False"
                AllowGrouping="True"
                AllowResizingColumns="True"
                AlternationCount="2">

        </syncfusion:SfDataGrid>

      </ContentControl>

      <!-- RHS DISPLAY -->
      <ContentControl
        x:Name="RHSTagsAndValuesContentControl"
        Margin="1,0,-1,0"
        syncfusion:DockingManager.DesiredHeightInFloatingMode="200"
        syncfusion:DockingManager.DesiredWidthInDockedMode="400"
        syncfusion:DockingManager.DesiredWidthInFloatingMode="150"
        syncfusion:DockingManager.Header="File Specific Information"
        syncfusion:DockingManager.SideInDockedMode="Right"
        syncfusion:DockingManager.State="Dock"
        syncfusion:DockingManager.SideRelativetoContainer="Right"
        syncfusion:DocumentContainer.MDIBounds="30,30,500,300"
        BorderThickness="0">
        
        <!-- Docking Manager for TagsAndValues windows -->
        <syncfusion:DockingManager
          x:Name="RHSTagsAndValuesDockingManager"
          Margin="1,0,-1,0"
          syncfusion:DockingManager.DesiredHeightInFloatingMode="200"
          syncfusion:DockingManager.DesiredWidthInDockedMode="400"
          syncfusion:DockingManager.DesiredWidthInFloatingMode="150"
          syncfusion:DockingManager.Header="Tags And Values"
          syncfusion:DockingManager.SideInDockedMode="Right"
          syncfusion:DockingManager.State="Dock"
          DockFill="True"
          EnableMouseHoverBackground="True"
          IsVS2010DraggingEnabled="True">
        </syncfusion:DockingManager>

      </ContentControl>


    </syncfusion:DockingManager>
  </Grid>
  <!--end layout Grid-->

  

</syncfusion:ChromelessWindow>
